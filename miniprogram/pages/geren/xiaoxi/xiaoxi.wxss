/* miniprogram/pages/geren/xiaoxi/xiaoxi.wxss */
/* miniprogram/pages/kecheng/kechengplay/kechengplay.wxss */

.page {
  width: 100%;
}
.kecheng-video {
  width: 100%;
}
.play-video {
  width: 100%;
}
.button {
  float: right;
  width: 30%;
  margin-right: 10px;
  margin-bottom: 10px;
}
.kecheng-image {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-top: 10px;
  margin-left: 10px;
  margin-bottom: 10px;
}
.kecheng-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: -30px;
  padding-left: 10px;
  font-size: small;
  font-weight: normal;
  text-align: left;
}

.kecheng-desc {
  padding-left: 10px;
  font-size: medium;
  font-weight: normal;
  text-align: left;
  padding-top: 0px;
}

.towatch {
  text-align: center;
  background-color: #fe7700;
  color: #fff;
  border-radius: 10px;
  margin-left: 10px;
  width: 80%;
}

.comment1 {
  width: 100%;
  margin-top: 15px;
  text-align: center;
  border-radius: 0px;
  flex-direction: row;
  display: flex;
  background-color: #fff;
}

.kecheng-info {
  width: 80%;
}
.replyButton {
  width: 14%;
}

.tabclass {
  width: 100%;
  background-color: white;
  color: #000;
}
.tab-bar-title__selected {
  font-size: 24px;
  font-weight: bold;
}
.header {
  margin-top: 5px;
  margin-left: 10px;
  font-size: large;
  font-weight: bold;
  margin-bottom: 5px;
}
.weui-tabs-swiper {
  height: calc(100vh - 720rpx) !important;
  overflow-y: auto !important;
}

.kecheng-comment {
  bottom: 50px;
  position: fixed;
  top: 0px;
}
.kecheng-price {
  position: fixed;
  bottom: 0;
  width: 100%;
  flex-direction: row;
  display: flex;
  background: #fff;
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
  height: 40px;
}
.price {
  width: 40%;
  text-align: center;
  font-weight: bold;
  font-size: larger;
  padding: auto 2px;
  padding-top: 4px;
  padding-bottom: 4px;
}
.buy-or-play {
  background: #fe7700;
  width: 35%;
  color: #fff;
  border-radius: 20px;
  text-align: center;
  font-weight: bold;
  font-size: larger;
  margin: 3px auto;
  padding: 3px 1px;
}

.editor {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.input {
  width: 80%;
  height: 90%;
}

.mini-btn {
  padding-left: 20px;
  height: 30px;
  margin: auto 5px;
}

.comment2-all {
  margin-left: 3%;
  text-align: center;
  border-radius: 0px;
  flex-direction: row;
  display: flex;
  background-color: #fff;
}

.all {
  height: 600px;
}

.timeandlove {
  display: flex;
  flex-direction: row;
  font-size: small;
  padding-left: 10px;
  width: 100%;
}

.love {
  width: 10px;
  margin-right: 2px;
}

.name {
  width: 90%;
  font-size: medium;
}

.reply {
  width: 15%;
  color: gray;
  font-size: small;
  text-align: left;
}

.time {
  width: 75%;
  text-align: left;
  margin-left: 10px;
}

.love_num {
  width: 10%;
  margin-right: 3px;
  text-align: center;
}

.love-2 {
  width: 10%;
  margin-right: 10px;
}
.love_num-2 {
  width: 10%;
  margin-right: 11px;
  text-align: center;
}

/* miniprogram/pages/kecheng/editor/editor.wxss */
/* @import "../../../weui/components/weui-wxss/dist/style/weui.wxss"; */

page > view {
  max-width: 100%;
}

.container {
  background-color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ececec;
}

.ql-active {
  color: #22c704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ececec;
  border-left: none;
  border-right: none;
  background-color: #fff;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
}
.k_name {
  width: 60%;
  margin-left: 10px;
}
.button {
  width: 20%;
  margin-right: 10px;
}
.lianxiti_image {
  width: 100%;
  height: 250px;
}
