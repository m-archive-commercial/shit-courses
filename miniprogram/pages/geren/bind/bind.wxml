<!-- miniprogram/pages/geren/bags/bags.wxml -->
<view class="page">
  <view class="flex-row">
    <view>电话</view>
    <view>
      <input class="input" type="number" bindinput="onPhoneInput" value="" placeholder="请输入手机号" placeholder-style="padding-top:2rpx;padding-left:8rpx;" />
    </view>
  </view>
  <view class="flex-row">
    <view>邮箱</view>
    <view>
      <input class="input" bindinput="onEmailInput" value="" placeholder="请输入邮箱" placeholder-style="padding-top:2rpx;padding-left:8rpx;" />
    </view>
  </view>
  <view class="submit-button" bindtap="onSubmit">提交</view>
</view>