/* miniprogram/pages/tianwen/shuati/shuati.wxss */
@import "../../../style/weui.wxss";


.picker{
  padding: 10px 20px;
  background-color: #FFFFFF;

}
page{
  height: 100%;  
}

.global-title{
  text-align: center;
  position: fixed;
  top:0;
  width: 100%;
  font-size: normal;
  background-color: #4186bd;
  color: #fff;
  padding-top: 5px;
  opacity: 0.5;
}

.question-title{
  flex-direction: row;
  display: flex;
  margin-top:10px;
  margin-left: 15px;
  margin-right: 15px;
}
.question-title-id{
  text-align: left;
  width: 50%;
}
.question-title-type{
  text-align: right;
  width: 50%;
}
.question-content{
  margin-top: 15px;
}
.question-content-text{
  background:rgba(0, 0, 0, 0);
  margin-left: 13px;
  margin-right: 15px;
  font-size: 14px;
}
.button{
  margin-top:20px;
  margin-bottom: 50px;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.box{
  background: rgba(0, 0, 0, 0);
  height: 10px;
  font-size: 14px;
}

.boxa{
  background: rgba(0, 0, 0, 0);
  height: 10px;
  font-size: 14px;
}

.input {
  width: 22px;
  margin-left: 5px;
  border: 0.9px solid #4186bd;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.41176471em;
  line-height: 1.41176471;
  padding-left: 10px;
}

.point{
  margin-left: 4px;
}
.question-body{
  color: #565e73;
  width: 90%;
  margin: 40px auto;
}

.choose{
  display: flex;
  flex-direction: row;
}

.fill{
  display: flex;
  flex-direction: row;
}

.cf1{
  padding-left: 10px;
  font-size: 14px;
}

.cf2{
  padding-left: 10px;
  color: gray;
  font-size: 14px;
}

.btn{
  background-color: #4186bd;
  opacity: 0.5;
  color: #fff;
  width: 100px;
  font-size: 15px;
  margin: 2px auto;
  border-radius: 6px;
  text-align: center;
}

.weui-cell.weui-cell_input{
  font-size: 14px;
}